@model ClientViewModel

<form asp-action="@(Model?.ClientId > 0 ? "Edit" : "Create")"
      data-ajax-method="post"
      data-ajax="true"
      data-ajax-success="onModalSuccess"
      data-ajax-failure="showErrorMessage">
    @if (Model?.ClientId > 0)
    {
        <input type="hidden" asp-for="ClientId" />
    }
    <div class="mb-5">
        <div class="form-floating mb-2">
            <input type="text" class="form-control" placeholder="First Name" asp-for="FirstName" />
            <label asp-for="FirstName"></label>
        </div>
        <span asp-validation-for="FirstName" class="text-danger d-block"></span>
    </div>
    <div class="mb-5">
        <div class="form-floating mb-2">
            <input type="text" class="form-control" placeholder="Last" asp-for="LastName" />
            <label asp-for="LastName"></label>
        </div>
        <span asp-validation-for="LastName" class="text-danger d-block"></span>
    </div>  
    <div class="mb-5">
        <div class="form-floating mb-2">
            <input type="email" class="form-control" placeholder="Email" asp-for="Email" />
            <label asp-for="Email"></label>
        </div>
        <span asp-validation-for="Email" class="text-danger d-block"></span>
    </div>
    <div class="mb-5">
        <div class="form-floating mb-2">
            <input type="text" class="form-control" placeholder="Number" asp-for="MobileNumber" />
            <label asp-for="MobileNumber"></label>
        </div>
        <span asp-validation-for="MobileNumber" class="text-danger d-block"></span>
    </div>
    <div class="mb-5">
        <div class="form-floating mb-2">
            <select class="form-select js-select2" asp-for="MaritalStatusId" asp-items="@Model.SelectStatus">
            <option>Select</option>
                </select>
            <label asp-for="SelectStatus"></label>
        </div>
        <span asp-validation-for="SelectStatus" class="text-danger d-block"></span>
    </div>
    <div class="mb-5">
        <div class="form-floating mb-2">
            <input type="date" class="form-control js-datepicker" placeholder="DateOfBirth" asp-for="DateOfBirth" />
            <label asp-for="DateOfBirth"></label>
        </div>
        <span asp-validation-for="DateOfBirth" class="text-danger d-block"></span>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="mb-5">
                <div>
                    <img id="ImagePreview" src="~/images/@(Model.ImagePath is null ? "Main_Image.png" : Model.ImagePath)" class="img-thumbnail" alt="Book Image">
                </div>
                <div class="form-floating mb-2">
                    <input type="file" class="form-control" placeholder="Image" asp-for="Image" accept=".jpg,.jpeg,.png"
                           onchange="document.getElementById('ImagePreview').src = window.URL.createObjectURL(this.files[0])" />
                    <label asp-for="Image"></label>
                </div>
                <span asp-validation-for="Image" class="text-danger d-block"></span>
            </div>
        </div>
    </div>


    <partial name="_ModalFooter" />
</form>